@model IEnumerable<Ecomm_Project4_4.Models.Product>
@{
    ViewData["Title"] = "Home Page";
}

<div class="row pb-4">
    @foreach (var item in Model)
    {
        <div class="card" style="width: 18rem;">
            <img src="@item.ImageUrl" class="card-img-top" alt="Card image cap" />
            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <p class="card-text"> @item.Price</p>               
                <p class="card-text">@Html.Raw(item.Description)</p>
                <a asp-action="Details" asp-area="Customer" asp-controller="Home" asp-route-ProductId="@item.Id" class="card-link btn btn-danger">Details</a>               
            </div>
        </div>
    }
</div>
