@model Ecomm_Project4_4.Models.ViewModels.ProductVM

<div class="container p-4">
    <div class="row p-3">
        <div class="col-6">
            <h2 class="text-left">list Of Product</h2>

        </div>
        <div class="col-6 end-0">
            <a asp-action="CreateUpdate" asp-controller="Product" class="btn btn-primary text-right">
                <i class="bi bi-plus-circle"></i>&nbsp;Create New Product
            </a>
        </div>
    </div>
</div>
<table id="tblData" class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Description </th>
            <th>Product Price</th>
            <th>Category</th>
            <th>Image</th>
            <th>Action</th>
        </tr>
    </thead>   
</table>
@section scripts{ 
<script src="~/js/product.js"></script>
}

