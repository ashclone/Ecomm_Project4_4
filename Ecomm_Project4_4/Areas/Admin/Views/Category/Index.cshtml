@model Ecomm_Project4_4.Models.ViewModels.CategoryVM

<div class="container p-4">
    <div class="row p-3">
        <div class="col-6">
            <h2 class="text-left">Category</h2>

        </div>
        <div class="col-6 ">
            <a asp-action="CreateUpdate" asp-controller="Category" class="btn btn-primary text-end">
                <i class="bi bi-plus-circle"></i>&nbsp;Create New Category
            </a>
        </div>
    </div>
</div>
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Name</th>
            <th>Display Order </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Categories)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.DisplayOrder
                </td>
                <td role="group">
                    <a asp-action="CreateUpdate" asp-controller="Category" asp-route-id="@item.Id"><i class="bi bi-pencil-square p-2 m-5"></i></a>
                    <a asp-action="Delete" asp-controller="Category" asp-route-id="@item.Id"><i class="bi bi-trash-fill"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

