@model Ecomm_Project4_4.Models.ViewModels.CategoryVM
@{
    var title = Model.Category.Id != 0 ? "Update" : "Create";
}
<form method="post">
    <div class="border p-3 m-4">
        <div class="row pb-3">
            <h2 class="text-primary">@title Category</h2>
            <hr />
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <input type="hidden" asp-for="@Model.Category.Id" />
        <div class="row mb-3">
            <label asp-for="@Model.Category.Name"></label>
            <input asp-for="@Model.Category.Name" class="form-control" />
            <span asp-validation-for="@Model.Category.Name" class="text-danger"></span>
        </div>
        <div class="row mb-3">
            <label asp-for="@Model.Category.DisplayOrder"></label>
            <input asp-for="@Model.Category.DisplayOrder" class="form-control" />
            <span asp-validation-for="@Model.Category.DisplayOrder" class="text-danger"></span>
        </div>
        <button class="btn btn-primary" type="submit">@title</button>
    </div>
    <a asp-action="Index" asp-controller="Category">Back To List</a>
</form>
@section scripts{
    <partial name="_ValidationScriptsPartial" />
    @* client side validation ke Liye *@
}

