@model Ecomm_Project4_4.Models.OrderHeader

<div class="container p-4">
    <div class="row p-3">
        <div class="col-6">
            <h2 class="text-left">List Of Orders</h2>

        </div>    
        <div class="col-6">
            <a asp-controller="order" asp-action="Index" asp-route-status="allorders" class="btn btn-danger">
                All Orders
            </a>
            <a asp-controller="order" asp-action="Index" asp-route-status="pending" class="btn btn-danger">
                Payment Pending
            </a>
            <a asp-controller="order" asp-action="Index" asp-route-status="approved" class="btn btn-danger">
                Payment Approved
            </a>
        </div>
    </div>
</div>
<table id="tblData" class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Name</th>
            <th>Phone Number </th>
            <th>Order Status</th>
            <th>Payment Status</th>
            <th>Order Total</th>            
            <th>Action</th>
        </tr>
    </thead>
</table>

@section scripts{
    <script src="~/js/order.js"></script>
}